{
  "expo": {
    "name": "yrc-canteen-android",
    "slug": "yrc-canteen-android",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "yrccanteenandroid",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.yrccanteenandroid"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "react-native-android-widget",
        {
          "fonts": [
            "./assets/font/LINESeedSansTH_A_Rg.ttf"
          ],
          "widgets": [
            {
              "name": "Hello",
              "label": "My Hello Widget",
              "minWidth": "320dp",
              "minHeight": "120dp",
              "targetCellWidth": 5,
              "targetCellHeight": 2,
              "description": "This is my first widget",
              "previewImage": "./assets/images/icon.png",
              "updatePeriodMillis": 300000
            }
          ]
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
